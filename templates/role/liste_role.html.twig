{% extends 'layout.html.twig'%}

{% block body  %}


    {# <div class="pull-right">

        <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target="#basic_modal" data-animate-modal="slideInRight"><i >Nouveau type produit</i>
        </button>

    </div> #}


    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-block">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>{{ message }}</strong></div>
    {% endfor %}


    <section class="content">
        <div class="col-lg-12">

            <div class="panel ">
                <div class="panel-heading">
                    <h3 class="panel-title">

                        <i class="fa fa-fw ti-credit-card"></i> Ajouter un role
                    </h3>

                </div>

                <div class="panel-body">
                    <div class="card-wrapper"></div>
                    <form method="post" action="">
                        <div class="row">

                            <div class="col-sm-6" >
                                <div class="form-group">
                                    <label for="select23" class="control-label">Nom du role *</label>
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>


                            {{form_rest(form) }}


                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-xs-4 col-md-4 col-md-offset-4">
                                        <input type="submit" id="btncheck1" value="Valider"
                                               class="btn btn-primary btn-block btn-md btn-responsive"
                                               tabindex="7">
                                    </div>
                                    
                                </div>

                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>

    </section>



    <section class="content">
        <div class="col-lg-12">
            <div class="panel ">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="ti-layout-grid3"></i> Liste de tous les roles
                    </h3>
                            <span class="pull-right">
                                    <i class="fa fa-fw ti-angle-up clickable"></i>
                                    <i class="fa fa-fw ti-close removepanel clickable"></i>
                                </span>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        {% if roles | length %}
                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                <thead>
                                <tr>
                                    <th>
                                        Nom
                                    </th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for role in roles  %}
                                    <tr>
                                        <td>{{role.name}}</td>
                                        <td>
                                            <a href="{{path('role_edit', {id:role.id}) }}">
                                                <button class="btn  btn-success" type="button">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                            </a>
                                            <button type="button" class="btn btn-danger" data-toggle="modal"
                                                data-target="#basic_modall{{role.id}}" data-animate-modal="slideInRight">
                                                <i class="fa fa-trash"></i>
                                            </button>                                        
                                        </td>
                                    </tr>

                                    {# Modal de confirmation de suppression #}
                                    <div id="basic_modall{{role.id}}" class="modal fade animated" role="dialog">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close"
                                                            data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Confirmation</h4>
                                                </div>

                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-12">

                                                            <h3>Etes-vous sûr de vouloir effectuer cette suppression?</h3>

                                                            <div class="col-sm-12">
                                                                <div class="row">

                                                                    <div class="col-xs-6 col-md-2 " >
                                                                            <a href="#">
                                                                                <button class="btn  btn-danger" type="button">
                                                                                    <i >Supprimer</i>
                                                                                </button>
                                                                            </a>
                                                                    </div>

                                                                    <div class="col-xs-6 col-md-2 " style="margin-top: 10px; margin-left: 10px;">
                                                                        <input type="reset" value="Annuler"
                                                                            class="btn btn-default" data-dismiss="modal">
                                                                    </div>
                                                                </div>


                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}


                                </tbody>
                            </table>

                            {% else %}
                                <p>pas de role à afficher </p>
                               

                            {% endif %}


                        
                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
