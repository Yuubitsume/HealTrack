{% extends 'layout.html.twig'%}

{% block body  %}
    <section class="content">
        <div class="col-lg-12">
            <div class="panel ">
                <div class="panel-heading">
                    <h3 class="panel-title">

                        <i class="fa fa-fw ti-credit-card"></i> Ajout d'une maladie
                    </h3>

                </div>

                <div class="panel-body">
                    <div class="card-wrapper"></div>
                    <form method="post" action="{{path('new.maladie') }}">
                        <div class="row">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="select23" class="control-label">Nom *</label>
                                    {{ form_errors(form.name) }}
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="select23" class="control-label">Description</label>
                                    {{ form_errors(form.description) }}
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>

                            {{form_rest(form) }}

                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-xs-4 col-md-4 col-md-offset-4">
                                        <input type="submit" id="btncheck1" value="Valider"
                                               class="btn btn-primary btn-block btn-md btn-responsive"
                                               tabindex="7">
                                    </div>
                                   
                                </div>

                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}