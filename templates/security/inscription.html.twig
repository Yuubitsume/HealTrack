{% block head %}
    <meta charset="utf-8">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="This is a login page template based on Bootstrap 5">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background:  #1f8c2e;
        }

        section.h-100 {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: linear-gradient(to bottom, #d4f2d2, #1f8c2e);
        }

        .container {
            height: 100%;
        }
    </style>
{% endblock %}

{% include 'base.html.twig' %}

{% block body %}
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <!-- Logo et texte d'accueil -->
            <div class="col-12">
                <div class="d-flex align-items-center my-5">
                    <!-- Logo bien aligné à gauche -->
                    <div class="logo-container" style="flex: 0;">
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('img/logo_remove_back.png') }}" alt="Heal-Track" width="100" style="margin-right: auto;">
                        </a>                        
                    </div>

                    <!-- Texte centré -->
                    <h1 class="fw-bold text-center flex-grow-1" style="font-size: 2rem; color: black;">WELCOME TO YOUR REHAB APP</h1>
                </div>
            </div>

            <!-- Contenu du formulaire -->
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="card shadow-lg">
                    <div class="card-body p-3">
                        <h2 class="fs-4 card-title fw-bold mb-4">Inscription</h2>
                        <form method="POST" class="needs-validation" novalidate="" autocomplete="off">
                            <label for="role">Choisissez votre rôle :</label>
                            <select id="role" name="role" class="form-select mb-3">
                                <option value="">-- Sélectionnez --</option>
                                <option value="patient">Patient</option>
                                <option value="medecin">Médecin</option>
                            </select>

                            <div id="common-fields">
                                <div class="mb-3">
                                    <label for="nom" class="form-label">Nom :</label>
                                    <input type="text" id="nom" name="nom" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="prenom" class="form-label">Prénom :</label>
                                    <input type="text" id="prenom" name="prenom" class="form-control" required>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email :</label>
                                    <input type="email" id="email" name="email" class="form-control" required>
                                </div>
                            </div>

                            <div id="medecin-fields" style="display: none;">
                                <div class="mb-3">
                                    <label for="specialite" class="form-label">Spécialité :</label>
                                    <input type="text" id="specialite" name="specialite" class="form-control">
                                </div>
                            </div>

                            <div id="patient-fields" style="display: none;">
                                <div class="mb-3">
                                    <label for="date-naissance" class="form-label">Date de naissance :</label>
                                    <input type="date" id="date-naissance" name="date-naissance" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="assurance" class="form-label">Numéro d'assurance :</label>
                                    <input type="text" id="assurance" name="assurance" class="form-control">
                                </div>
                            </div>

                            <div class="d-flex align-items-center mt-3">
                                <button type="submit" class="btn btn-primary ms-auto">
                                    S'inscrire
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            Vous avez déjà un compte ? <a href="{{ path('login') }}" class="text-dark">Connexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('temp_admin/js/custom_js/login.js') }}"></script>
    <script src="{{ asset('temp_admin/js/inscription.js') }}"></script>
{% endblock %}
